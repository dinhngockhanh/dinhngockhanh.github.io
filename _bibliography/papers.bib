  author={Czerniak, Bogdan and Lee, Sangkyou and Jung, Sung Y. and Kus, Pawel and Bondaruk, Jolanta and Lee, June and Jaksik, Roman and Putluri, Nagireddy and Dinh, Khanh N. and Cogdell, David and others},
